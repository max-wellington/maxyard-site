generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AdminUser {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Event {
  id            String       @id @default(cuid())
  slug          String       @unique
  title         String
  description   String?
  dateTime      DateTime
  gatesOpenAt   DateTime?
  cutoffHours   Int          @default(2)
  capacity      Int
  basePrice     Int
  serviceFeePct Float        @default(0)
  taxPct        Float        @default(0)
  address       String?
  addonsEnabled Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  priceTiers    PriceTier[]
  orders        Order[]
  addons        EventAddon[]
}

model PriceTier {
  id       String   @id @default(cuid())
  eventId  String
  name     String
  startsAt DateTime?
  endsAt   DateTime?
  price    Int
  Event    Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model EventAddon {
  id          String   @id @default(cuid())
  eventId     String
  name        String
  description String?
  price       Int
  Event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  orders      OrderAddon[]
}

model Order {
  id            String       @id @default(cuid())
  eventId       String
  email         String
  firstName     String
  lastName      String
  phone         String?
  licensePlate  String?
  specialNotes  String?
  qty           Int
  unitPrice     Int
  serviceFee    Int
  tax           Int
  addonsTotal   Int          @default(0)
  total         Int
  status        OrderStatus  @default(PENDING)
  stripeSession String?
  qrCode        String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  event         Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  tickets       Ticket[]
  promoCodeId   String?
  promoCode     PromoCode?   @relation(fields: [promoCodeId], references: [id])
  addons        OrderAddon[]
}

model OrderAddon {
  id        String     @id @default(cuid())
  orderId   String
  addonId   String?
  name      String
  price     Int
  order     Order      @relation(fields: [orderId], references: [id], onDelete: Cascade)
  addon     EventAddon? @relation(fields: [addonId], references: [id])
}

model Ticket {
  id        String   @id @default(cuid())
  orderId   String
  eventId   String
  checkedIn Boolean  @default(false)
  createdAt DateTime @default(now())
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model PromoCode {
  id        String   @id @default(cuid())
  code      String   @unique
  percent   Float?
  amountOff Int?
  maxUses   Int?
  used      Int      @default(0)
  startsAt  DateTime?
  endsAt    DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model SiteSetting {
  id            Int      @id @default(1)
  timezone      String   @default("America/New_York")
  address       String?
  smsEnabled    Boolean  @default(false)
  contactEmail  String?
  contactPhone  String?
  mapEmbedUrl   String?
  updatedAt     DateTime @updatedAt
}

enum OrderStatus {
  PENDING
  PAID
  REFUNDED
  CANCELED
}

